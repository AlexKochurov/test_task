<h1>All posts</h1>
<section>
  <table class="table table-striped">
    <thead>
      <th>author</th>
      <th>title</th>
      <th>text</th>
      <th>tags</th>
      <th>status</th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.email %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.tags.join(" ") %></td>
          <td><%= post.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
